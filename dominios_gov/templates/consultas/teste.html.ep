% layout 'layout';
% title 'DominiosGov';

<div class="well bs-component">
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>NIC-HDL-BR</th>
				<th>Nome</th>
				<th>Criação</th>
				<th>Alteração</th>
			</tr>
		</thead>
		<tbody>
			<% for my $item (@$nics) { %>
				<tr scope="row">
				<td><%= $item->[1] %></td>
				<td><%= $item->[0] %></td>
				<td><%= $item->[3] %></td>
				<td><%= $item->[2] %></td>
				</tr>
			<% } %>
		</tbody>
	</table>
</div>
